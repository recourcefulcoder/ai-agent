# OpenRouter Configuration
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Default LLM Models
DEFAULT_LLM_MODEL=z-ai/glm-4.5-air:free

# Browser Configuration
BROWSER_HEADLESS=false  # Set to true for headless mode
BROWSER_SLOW_MO=500  # Milliseconds to slow down actions (for debugging)
BROWSER_TIMEOUT=30000  # Default timeout in milliseconds

# Agent Configuration
MAX_RETRIES=3  # Maximum retries for failed actions
ENABLE_VISION=true  # Use vision model for page analysis
REQUIRE_CONFIRMATION_FOR_SENSITIVE=true  # Ask before payments, deletions, etc.

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_TO_FILE=true
LOG_FILE_PATH=logs/agent.log
